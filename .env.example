# Rainbow-Docs Configuration

# 数据库配置
DATABASE_URL=127.0.0.1:8686
DATABASE_USER=root
DATABASE_PASS=root
DATABASE_NAMESPACE=docs
DATABASE_DB=main
DATABASE_CONNECTION_TIMEOUT=30
DATABASE_MAX_CONNECTIONS=10

# JWT配置 (必需)
JWT_SECRET=8A5xMSMdwqdMXmEHBo2zByyRSFJFsdSYKNEWY0n9f2E=
JWT_EXPIRATION=86400

# Rainbow-Auth 集成配置
RAINBOW_AUTH_URL=http://localhost:8080
RAINBOW_AUTH_INTEGRATION=true

# 服务器配置
HOST=0.0.0.0
PORT=3000
APP_URL=http://localhost:3000

# 功能开关
ENABLE_PDF_EXPORT=false
ENABLE_NOTIFICATIONS=true
ENABLE_COMMENTS=true
ENABLE_VERSIONING=true

# 向量/嵌入服务配置
# Provider options: "openai", "azure", "local"
EMBEDDING_PROVIDER=openai
EMBEDDING_API_KEY=your_openai_api_key_here
EMBEDDING_API_BASE_URL=https://api.openai.com/v1
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536

# For Azure OpenAI
# EMBEDDING_PROVIDER=azure
# EMBEDDING_API_KEY=your_azure_api_key_here
# EMBEDDING_API_BASE_URL=https://your-resource.openai.azure.com
# EMBEDDING_MODEL=text-embedding-ada-002
# EMBEDDING_DIMENSION=1536

# For Local Embedding Service
# EMBEDDING_PROVIDER=local
# EMBEDDING_API_BASE_URL=http://localhost:8080
# EMBEDDING_MODEL=all-MiniLM-L6-v2
# EMBEDDING_DIMENSION=384

# 智能分块配置
# 分块策略: "simple", "structural", "semantic", "hybrid", "adaptive"
CHUNKING_STRATEGY=simple
CHUNKING_TARGET_SIZE=1000
CHUNKING_MAX_SIZE=1500
CHUNKING_MIN_SIZE=100
CHUNKING_OVERLAP_SIZE=50

# 分块质量控制
CHUNK_QUALITY_ENABLED=true
MIN_QUALITY_SCORE=0.6

# 可选功能配置
# SMTP配置 (如果启用通知)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USERNAME=your-username
# SMTP_PASSWORD=your-password
# SMTP_FROM=noreply@your-domain.com